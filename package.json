{
  "name": "website-cass",
  "description": "Portfolio website of writer Cassandra Frances",
  "version": "0.0.1",
  "author": "Axel Bocciarelli",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/axelboc/website-cass"
  },
  "homepage": "https://cassfrances.com",
  "engines": {
    "node": "8.x"
  },
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not ie <= 10"
  ],
  "dependencies": {
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^7.0.0-beta.1",
    "babel-plugin-transform-react-jsx-self": "^6.22.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-2": "^6.22.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.0",
    "highlight.js": "^9.10.0",
    "history": "^2.0.0",
    "npm-run-all": "^4.0.2",
    "phenomic": "^0.21.1",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.10.0",
    "postcss-loader": "^1.3.3",
    "postcss-reporter": "^3.0.0",
    "prop-types": "^15.5.8",
    "raw-loader": "^0.5.1",
    "react": "^15.5.4",
    "react-dom": "^15.4.2",
    "react-helmet": "^3.0.0",
    "react-hot-loader": "^3.0.0-beta",
    "react-redux": "^4.0.0",
    "react-render-html": "^0.1.6",
    "react-router": "^2.3.0",
    "react-svg-inline": "^1.2.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.0.0",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-css-modules": "^0.1.0",
    "webpack": "^2.3.2",
    "whatwg-fetch": "^2.0.3",
    "yaml-markdown-loader": "^3.2.2"
  },
  "phenomic": {
    "nojekyll": false
  },
  "#babel": "webpack-(development|production) are useful for webpack 2, otherwise use development|production",
  "babel": {
    "env": {
      "test": {
        "presets": [
          "babel-preset-env",
          "babel-preset-stage-2",
          "babel-preset-react"
        ]
      },
      "development": {
        "presets": [
          "babel-preset-env",
          "babel-preset-stage-2",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-transform-react-jsx-source",
          "babel-plugin-transform-react-jsx-self",
          "react-hot-loader/babel"
        ]
      },
      "production": {
        "presets": [
          "babel-preset-react-optimize",
          "babel-preset-env",
          "babel-preset-stage-2",
          "babel-preset-react"
        ]
      },
      "webpack-development": {
        "presets": [
          [
            "babel-preset-env",
            {
              "modules": false
            }
          ],
          "babel-preset-stage-2",
          "babel-preset-react"
        ],
        "plugins": [
          "babel-plugin-transform-react-jsx-source",
          "babel-plugin-transform-react-jsx-self",
          "react-hot-loader/babel"
        ]
      },
      "webpack-production": {
        "presets": [
          "babel-preset-react-optimize",
          [
            "babel-preset-env",
            {
              "modules": false
            }
          ],
          "babel-preset-stage-2",
          "babel-preset-react"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "./node_modules/phenomic/lib/eslint-config-recommended/index.js",
    "rules": {
      "semi": 2,
      "no-console": 0
    }
  },
  "stylelint": {
    "extends": [
      "./node_modules/phenomic/lib/stylelint-config-recommended/index.js",
      "stylelint-config-css-modules"
    ]
  }
}
